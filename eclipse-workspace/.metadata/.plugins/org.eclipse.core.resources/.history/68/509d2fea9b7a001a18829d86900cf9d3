int main(void) {

	setbuf(stdout, NULL);

	int min;
	int max;
	int numeroRandom;
	int numeroIngresado;
	int i = 0;
	char respuesta = 's';



	return 0;
}

char getNumeroAleatorio(int desde, int hasta, int iniciar)
{
	if(iniciar)
	{
		srand(time(NULL));
	}

	return desde + (rand() % (hasta + 1 - desde));
}
