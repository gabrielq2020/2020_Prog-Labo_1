 - Solicite al usuario 10 números
 - Calcule cuántos son negativos y cuantos son positivos
 - Muestre por pantalla la cantidad de negativos y la cantidad de positivos

 */

#include <stdio.h>
#include <stdlib.h>

int main()
{
	int numero;
	int contadorNumeros=0;
	int contaPos=0;
	int contaNeg=0;

	//Solicite al usuario 10 números
	do
	{

		printf("Ingrese un numero \n");
		fflush(stdin);	//Limpia cualquier basura del teclado
		scanf("%d", &numero);

		if(numero >= 0)
		{
			contaPos++;
		}else
		{
			contaNeg++;
		}

	}while(contadorNumeros<10);

	printf("\n Numeros positivos: \n", contaPos);
	printf("\n Numeros negativos: \n", contaNeg);

	return 0;
}
