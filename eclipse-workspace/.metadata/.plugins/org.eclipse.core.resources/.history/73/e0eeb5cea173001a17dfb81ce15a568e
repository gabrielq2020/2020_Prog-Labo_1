 - Solicite al usuario 10 números
 - Calcule cuántos son negativos y cuantos son positivos
 - Muestre por pantalla la cantidad de negativos y la cantidad de positivos

 */

#include <stdio.h>
#include <stdlib.h>

int main()
{
	int numero;
	int contadorNumeros=0;
	int contadorPositivos=0;
	int contadorNegativos=0;

	//Solicite al usuario 10 números
	do
	{

		printf("Ingrese un numero \n");
		scanf("%d", &numero);

		if(numero >= 0)
		{
			contadorPositivos++;
		}else
		{
			contadorNegativos++;
		}

	}while(contadorNumeros<10);

	printf("\nNumeros positivos es: \n", contadorPositivos);
	printf("\nLa cantidad de numeros negativos es: \n", contadorNegativos);

	return 0;
}
