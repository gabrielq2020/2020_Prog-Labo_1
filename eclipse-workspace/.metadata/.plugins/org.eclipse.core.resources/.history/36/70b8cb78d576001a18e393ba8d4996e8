#include <stdio.h>
#include <stdlib.h>

int main()
{
	setbuf(stdout, NULL);

	int mes;
	printf("Ingresar mes para saber cantidad de días\n");
	fflush(stdin);
	scanf("%d", &mes);

	switch (mes)
	{
		case 2:
			printf("El mes tiene 28 días");
			break;
		case 4:
		case 6:
		case 9:
		case 11:
			printf("El mes tiene 30 días");
			break;
		default:
			printf("El mes tiene 31 días");
			break;
	}

	return 0;
}
