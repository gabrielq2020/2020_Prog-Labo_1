int imprimirArrayInt(int pArray[],int size)
{
	int i;
	int retorno = -1;
	if(pArray != 0 && size > 0)
	{
		for (i = 0; i < size; i++)
		{
			printf("El indice [%d] tiene como valor %d\n", i, pArray[i]);
			retorno = 0
		}
	}
	return 0;
}
