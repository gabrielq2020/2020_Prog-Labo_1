 Description : Desarrollar una biblioteca "utn.h" que posea funciones para
 pedirle al usuario el ingreso de datos
 -getInt()
 -getFloat()
 -getChar()
 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>

int main(void) {

	setbuf(stdout, NULL);

	int numero;
	float flotante;
	char caracter;

	char mensajeN = "Ingrese un numero entero";
	char mensajeF = "Ingrese un numero flotante";
	char mensajeC = "Ingrese un caracter";

	numero = getInt();

	flotante = getFloat();

	caracter = getChar();

	return 0;
}

int getInt()
{
	int numeroInt;
	printf("Ingrese un numero entero\n");
	fflush(stdin);
	scanf("%d", numeroInt);

	return numeroInt;
}

int getInt()
{
	int numeroFloat;
	printf("Ingrese un numero flotante\n");
	fflush(stdin);
	scanf("%f", numeroFloat);

	return numeroFloat;
}

int getFloat()
{
	int caracterIngr;
	printf("Ingrese un caracter\n");
	fflush(stdin);
	scanf("%c", caracterIngr);

	return caracterIngr;
}
