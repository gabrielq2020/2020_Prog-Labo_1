 /*
 ============================================================================
 Name        : Clase1_Ejercicio_04
 Description :
 - Solicite al usuario 10 números
 - Calcule cuántos son negativos y cuantos son positivos
 - Muestre por pantalla la cantidad de negativos y la cantidad de positivos
 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>

int main()
{
	int numero;
	int i;
	int contaPos = 0;
	int contaNeg = 0;

	setbuf(stdout, NULL);

	//Solicite al usuario 10 números
	for (i = 0; i < 10; i++)
	{
		printf("Ingrese un numero ");
		fflush(stdin);	//Limpia cualquier basura del teclado
		scanf("%d", &numero);

		if (numero >= 0) {
			contaPos++;
		} else {
			contaNeg++;
		}
	}

	printf("\nNumeros positivos: %d\n", contaPos);
	printf("Numeros negativos: %d", contaNeg);

	return 0;
}
